<%- include("./partials/header.ejs")%>


<div class="container form_width">
    <div class="form">
        <form  action="/view"  method="POST">
            <label for="author" > Name :
            </label>
            <input type="text" name="name" size="60" value=" <%=obj.updated_author_name %>"   required/>
            <label for="title"> Title :</label>
            <input type="text" name="title" size="60"value="<%=obj.updated_title %>"  required/>
            <label for="blog"> Blog :</label>
            <textarea name="blog_text" id="entered_text" rows="8" cols="63" >
               <%= obj.updated_blog_text%>
            </textarea>

            <input type="submit"  value="Post"/>

            <input type="hidden" name="updated_idx" id="update_idx" value="<%= obj.tail %>">

            
        </form>

        <form action="/delete" method="POST" class="mt-3">
            <input type="hidden" name="updated_idx" id="update_idx" value="<%= obj.tail %>">
            <button type="submit" class="btn btn-danger">DELETE</button>
          </form>
    </div>
   
</div>
